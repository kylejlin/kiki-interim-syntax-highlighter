{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Aya",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#names"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.aya",
          "match": "\\b(let|ind|vcon|For|func|dec|match|return|case|stub|symbol)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.aya",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.aya",
          "match": "\\\\([\"\\\\nt]|u\\{[0-9a-fA-F]+\\})"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.aya",
          "match": "\\/\\/[^\\n]*"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.universe.aya",
          "match": "(Set|Prop)[0-9]*"
        },
        {
          "name": "constant.numeric.aya",
          "match": "[0-9]+"
        }
      ]
    },
    "names": {
      "patterns": [
        {
          "name": "entity.name.type.aya",
          "match": "(?<=\\n|^|[^a-zA-Z_\\$/\\\\0-9])(/?[_\\$]*[A-Z][a-zA-Z_\\$/\\\\0-9]*)(?=\\n|$|[^a-zA-Z_\\$/\\\\0-9])"
        },
        {
          "name": "entity.name.variable.aya",
          "match": "(?<=\\n|^|[^a-zA-Z_\\$/\\\\0-9])(/?[_\\$]*[a-z][a-zA-Z_\\$/\\\\0-9]*)(?=\\n|$|[^a-zA-Z_\\$/\\\\0-9])"
        },
        {
          "name": "entity.name.variable.aya",
          "match": "@@?[0-9]+"
        },
        {
          "name": "variable.other.aya",
          "match": "\\b_\\b"
        }
      ]
    }
  },
  "scopeName": "source.aya"
}
